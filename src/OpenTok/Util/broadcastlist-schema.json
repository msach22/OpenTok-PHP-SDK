{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Broadcast List",
  "description": "A list of OpenTok Broadcasts",
  "type": "object",
  "properties": {
    "count": {
      "type": "integer"
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/broadcast"
      }
    }
  },
  "required": ["count", "items"],
  "definitions": {
    "broadcast": {
      "title": "Broadcast",
      "description": "An OpenTok Broadcast",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]{8}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{12}$"
        },
        "partnerId": {
          "type": "integer"
        },
        "sessionId": {
          "type": "string"
        },
        "createdAt": {
          "type" : "integer"
        },
        "updatedAt": {
          "type" : "integer"
        },
        "broadcastUrls": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "object",
              "properties": {
                "hls": {
                  "type": "string"
                }
              }
            }
          ]
        }
      },
      "required": [ "id", "partnerId", "sessionId", "createdAt", "updatedAt" ]
    }
  }
}

